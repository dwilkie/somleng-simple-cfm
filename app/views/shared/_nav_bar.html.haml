%nav.navbar.navbar-dark.sticky-top.bg-dark.navbar-expand.p-0.justify-content-between
  .navbar-brand
    %button.btn.btn-dark.d-md-none{"aria-controls" => "side_navigation", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#side_navigation", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    Somleng SCFM

  %ul#user_menu.navbar-nav.px-3
    %li
      .btn-group
        %button.btn.btn-secondary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          = t(:"titles.language")
        .dropdown-menu.dropdown-menu-right
          %a
            - if current_user.locale_en?
              = button_to dashboard_locale_path(current_user), method: :patch, params: { user: { locale: "km" }}, class: "dropdown-item text-center" do
                ខែ្មរ
                = image_tag "km-flag.png"
            - else
              = button_to dashboard_locale_path(current_user), method: :patch, params: { user: { locale: "en" }}, class: "dropdown-item text-center" do
                Eng
                = image_tag "en-flag.png"
    %li
      .btn-group
        %button.btn.btn-secondary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          = octicon "person"
        .dropdown-menu.dropdown-menu-right
          = link_to edit_dashboard_account_path do
            %button.dropdown-item{:type => "button"}
              = translate(:"titles.accounts.edit")
          = link_to edit_user_registration_path do
            %button.dropdown-item{:type => "button"}
              = translate(:"titles.user_registrations.edit")
          = link_to destroy_user_session_path, method: :delete, data: { confirm: translate(:"titles.actions.data_confirm") } do
            %button.dropdown-item{:type => "button"}
              = translate(:"titles.user_sessions.destroy")
