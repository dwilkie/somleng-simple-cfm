.col-md-6
  %h5.card-title Edit User
  = simple_form_for @user, url: dashboard_user_path(@user) do |f|
    = f.input :email, input_html: { disabled: true }
    = f.input :roles, as: :radio_buttons, collection: User.values_for_roles, label_method: ->(r) { r.to_s.capitalize }, checked: f.object.roles
    = f.input :location_ids, collection: Pumi::Province.all, label_method: :name_en, value_method: :id, selected: f.object.location_ids, include_blank: false, label: 'Locations', input_html: { multiple: 'multiple', class: 'js-basic-multiple-select' }
    .form-group.actions
      = f.button :submit, class: 'btn btn-primary'
      = link_to 'Cancel', :back, class: 'btn btn-outline-dark'
