.col-12
  .col-12
    .btn-toolbar{ role: 'toolbar' }
      .btn-group.mr-2{ role: 'group' }
        = button_to 'Invite user', new_user_invitation_path, method: 'get', class: ' btn btn-outline-dark'
    %br

.col-12
  %table.table.table-hover.table-bordered
    %thead.thead-light
      %tr
        %th #
        %th Email
        %th Last signned in
    %tbody
      - @user.each_with_index do |user, index|
        %tr
          %td= index + 1
          %td= user.email
          %td= user.last_sign_in_at
