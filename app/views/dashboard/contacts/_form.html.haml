.card
  .card-body
    = simple_form_for [:dashboard, resource] do |f|
      = f.input :msisdn, input_html: { autofocus: true }
      = f.input :province_id, collection: [], wrapper_html: { id: 'province' }, input_html: { class: 'js-province-selectize', data: { default_value: f.object.province_id, pumi_url: pumi.provinces_url, preload: true }}

      = f.input :district_id, collection: [], wrapper_html: { id: 'district' }, input_html: { class: 'js-district-selectize', data: { default_value: f.object.district_id, pumi_url: pumi.districts_url(province_id: "FILTER"), preload: true }}

      = f.input :commune_id, collection: [], wrapper_html: { id: 'commune' }, input_html: { class: 'js-cummune-selectize', data: { default_value: f.object.commune_id, pumi_url: pumi.communes_url(district_id: "FILTER"), preload: true }}
      .form-group.actions
        = f.button :submit, class: 'btn btn-primary'
        = link_to(translate(:"titles.actions.cancel"), :back, class: 'btn btn-outline-dark')
