.col-12.col-md-8
  %h5#page_title.card-title
    = translate(:"titles.contacts.index")

.col-12
  #button_toolbar.btn-toolbar{ role: 'toolbar' }
    .btn-group.mr-2{ role: 'group' }
      = link_to(translate(:"titles.contacts.new"), new_dashboard_contact_path, class: 'btn btn-outline-dark')
  %br
.col-12
  %table#contacts.table.table-hover.table-bordered
    %thead.thead-light
      %tr
        %th #
        %th
          = Contact.human_attribute_name(:msisdn)
        %th
          = Contact.human_attribute_name(:created_at)
    %tbody
      - resources.each do |resource|
        %tr
          %td
            = link_to(resource.id, show_location(resource))
          %td
            = resource.msisdn
          %td
            = resource.created_at
.col-12
  = paginate resources
