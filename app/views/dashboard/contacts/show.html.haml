.col
  #button_toolbar.btn-toolbar.mb-3{ role: 'toolbar' }
    = render("shared/disabled_button", url: dashboard_contact_path(resource), button_text: resource.model_name.human)
    .btn-group.mr-2{ role: 'group' }
      = render("shared/button_with_count", url: dashboard_contact_callout_participations_path(resource), button_text: translate(:"titles.callout_participations.index"), count: resource.callout_participations.count)
    .btn-group.mr-2{ role: 'group' }
      = render("shared/button_with_count", url: dashboard_contact_phone_calls_path(resource), button_text: translate(:"titles.phone_calls.index"), count: resource.phone_calls.count)
    .btn-group.mr-2{ role: 'group' }
      = link_to(translate(:"titles.actions.edit"), edit_dashboard_contact_path(resource), class: 'btn btn-outline-primary')
    .btn-group.mr-2{ role: 'group' }
      = link_to(translate(:"titles.actions.delete"), dashboard_contact_path(resource), class: 'btn btn-outline-danger', method: :delete, data: { confirm: translate(:"titles.actions.data_confirm") })
.col-lg-8.col-sm-12
  #contact.card
    .card-body
      %dl.row
        %dt.col-sm-5.col-md-4.text-md-right #
        %dd.col-sm-7.col-md-6
          %code
            = resource.id
      %dl.row
        %dt.col-sm-5.col-md-4.text-md-right
          = Contact.human_attribute_name(:msisdn)
        %dd.col-sm-7.col-md-6
          %code
            = resource.msisdn
      %dl.row
        %dt.col-sm-5.col-md-4.text-md-right
          = Contact.human_attribute_name(:created_at)
        %dd.col-sm-7.col-md-6
          %code
            = resource.created_at
      = render("shared/key_value_attributes", attribute: :metadata)
