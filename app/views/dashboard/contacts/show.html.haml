.col-12
  .btn-toolbar{ role: 'toolbar' }
    .btn-group.mr-2{ role: 'group' }
      = button_to 'Back', :back, class: 'btn btn-outline-dark', method: :get
    - if current_user.is_admin?
      .btn-group.mr-2{ role: 'group' }
        = button_to 'Edit', edit_dashboard_contact_path(@contact), class: ' btn btn-outline-primary', method: :get
      .btn-group.mr-2{ role: 'group' }
        = button_to 'Delete', dashboard_contact_path(@contact), class: ' btn btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' }
  %br
.col-lg-8.col-sm-12
  = div_for(@contact, class: 'card') do
    .card-header
      Contact detail
    .card-body
      %dl.row
        %dt.col.text-md-right Phone Number:
        %dd.col= @contact.msisdn
      %dl.row
        %dt.col.text-md-right Province:
        %dd.col= province_name(@contact.province_id)
      %dl.row
        %dt.col.text-md-right District:
        %dd.col= district_name(@contact.district_id)
      %dl.row
        %dt.col.text-md-right Commune:
        %dd.col= commune_name(@contact.commune_id)
      %dl.row
        %dt.col.text-md-right Village:
        %dd.col= village_name(@contact.village_id)
