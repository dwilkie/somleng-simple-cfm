.col-12.col-md-8
  %h5#page_title.card-title
    = translate(:"titles.access_tokens.index")

.col-12
  .btn-toolbar{ role: 'toolbar' }
  %br
.col-12
  %table#access_tokens.table.table-hover.table-bordered
    %thead.thead-light
      %tr
        %th #
        %th
          = AccessToken.human_attribute_name(:token)
        %th
          = AccessToken.human_attribute_name(:created_at)
    %tbody
      - @access_tokens.each_with_index do |access_token, index|
        %tr
          %td
            = index + 1
          %td
            %code
              = access_token.token
          %td
            = access_token.created_at
