.col-12.col-md-8
  %h5#page_title.card-title
    = translate(:"titles.access_tokens.index")

.col-12
  .btn-toolbar{ role: 'toolbar' }
  %br
.col-12
  %table#access_tokens.table.table-hover.table-bordered
    %thead.thead-light
      %tr
        %th #
        %th
          = AccessToken.human_attribute_name(:token)
        %th
          = AccessToken.human_attribute_name(:created_at)
    %tbody
      - resources.each_with_index do |resource, index|
        %tr
          %td
            = index + 1
          %td
            %code
              = resource.token
          %td
            = resource.created_at
.col-12
  = paginate resources
