.card
  .card-body
    = simple_form_for([:dashboard, resource]) do |f|
      = f.input :province_id, collection: [], wrapper_html: { id: 'province' }, input_html: { class: 'js-pumi-selectize', data: { default_value: f.object.province_id, pumi_url: pumi.provinces_url } }
      .form-group.actions
        = f.button :submit, translate(:"titles.sensors.#{action}"), class: 'btn btn-primary'
        = link_to(translate(:"titles.actions.cancel"), :back, class: 'btn btn-outline-dark')
