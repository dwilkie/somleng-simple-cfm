.card
  .card-body
    = simple_form_for(resource, url: url) do |f|
      = f.input :level
      = f.input :voice, as: :file, input_html: { direct_upload: true, accept: SensorRule::AUDIO_CONTENT_TYPES.join(", ") }
      .form-group.actions
        = f.button :submit, class: 'btn btn-primary'
        = link_to(translate(:"titles.actions.cancel"), :back, class: 'btn btn-outline-dark')
