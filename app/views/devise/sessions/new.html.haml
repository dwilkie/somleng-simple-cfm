.container.devise-page
  .row
    .col-lg-4.offset-lg-4.col-md-6.offset-md-3.col-sm-8.offset-sm-2
      .card
        .card-body
          %h5#page_title.card-title
            = translate(:"titles.user_sessions.new")
          = simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f|
            = f.input :email
            = f.input :password
            - if devise_mapping.rememberable?
              .form-group
                = f.check_box :remember_me
                = f.label :remember_me
            .form-group.actions
              = f.submit translate(:"titles.user_sessions.create"), class: 'btn btn-primary'
          = render "devise/shared/links"
